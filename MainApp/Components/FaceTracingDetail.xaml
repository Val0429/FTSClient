<UserControl x:Class="Tencent.Components.FaceTracingDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tencent.Components"
             xmlns:tlibborder="clr-namespace:TencentLibrary.Borders;assembly=TencentLibrary"
             xmlns:scv="clr-namespace:TencentLibrary.ScrollViewers;assembly=TencentLibrary"
             mc:Ignorable="d"
             d:DesignHeight="480" d:DesignWidth="640">

    <DockPanel>
        <DockPanel.Background>
            <ImageBrush Viewbox="0,0 0.5,0.5"
                            Stretch="Fill" ImageSource="{StaticResource BackgroundImage}" />
        </DockPanel.Background>
        <Viewbox>
            <Viewbox.CacheMode>
                <BitmapCache RenderAtScale="3" />
            </Viewbox.CacheMode>
            <tlibborder:MainBorder Padding="15" Width="932" Height="475" Title="人脸追踪详情">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                
                <scv:CustomScrollViewer Grid.Column="0"
                        Margin="0,0,10,0"
                        ScrollContentMargin="0,0,0,10"
                        ScrollBarMargin="0,30,0,0">
                        <StackPanel>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                        </StackPanel>
                    </scv:CustomScrollViewer>

                <scv:CustomScrollViewer Grid.Column="1"
                    Margin="10,0,0,0"
                    ScrollContentMargin="0,0,0,10"
                    ScrollBarMargin="0,30,0,0">
                        <StackPanel>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
                            <Label Foreground="White">123</Label>
